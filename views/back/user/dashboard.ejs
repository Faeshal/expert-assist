<%-include('../../layouts/back/user/header.ejs')%>
<!-- Sidenav -->
<%-include('../../layouts/back/user/sideNav.ejs')%>
<!-- Main content -->
<div class="main-content" id="panel">
  <!-- Topnav -->
  <%-include('../../layouts/back/user/topNav.ejs')%>
  <!-- Header -->
  <!-- Header -->
  <div class="header pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 d-inline-block mb-0">Welcome</h6>
            <nav
              aria-label="breadcrumb"
              class="d-none d-md-inline-block ml-md-4"
            >
              <ol class="breadcrumb breadcrumb-links">
                <li class="breadcrumb-item">
                  <a href="#"><i class="fas fa-home"></i></a>
                </li>
                <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  User
                </li>
              </ol>
            </nav>
          </div>
          <div class="col-lg-6 col-5 text-right">
            <form action="/logout" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button type="submit" class="btn btn-sm btn-danger">
                <i class="ni ni-user-run"></i>
                <span>Logout</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col-xl-3 col-md-6">
        <div class="card card-stats">
          <!-- Card body -->
          <div class="card-body">
            <div class="row">
              <div class="col">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  Failed Payment
                </h5>
                <span class="h2 font-weight-bold mb-0"><%=failedPayment%></span>
              </div>
              <div class="col-auto">
                <div
                  class="icon icon-shape bg-gradient-red text-white rounded-circle shadow"
                >
                  <i class="ni ni-active-40"></i>
                </div>
              </div>
            </div>
            <p class="mt-3 mb-0 text-sm">
              <span class="text-success mr-2"
                ><i class="fa fa-arrow-up"></i> 0%</span
              >
              <span class="text-nowrap">Since now</span>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-md-6">
        <div class="card card-stats">
          <!-- Card body -->
          <div class="card-body">
            <div class="row">
              <div class="col">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  Payment Done
                </h5>
                <span class="h2 font-weight-bold mb-0"><%=totalPayment%></span>
              </div>
              <div class="col-auto">
                <div
                  class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow"
                >
                  <i class="ni ni-chart-pie-35"></i>
                </div>
              </div>
            </div>
            <p class="mt-3 mb-0 text-sm">
              <span class="text-success mr-2"
                ><i class="fa fa-arrow-up"></i> 0%</span
              >
              <span class="text-nowrap">Since now</span>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-md-6">
        <div class="card card-stats">
          <!-- Card body -->
          <div class="card-body">
            <div class="row">
              <div class="col">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  Schedule
                </h5>
                <span class="h2 font-weight-bold mb-0"
                  ><%=incomingSchedule%></span
                >
              </div>
              <div class="col-auto">
                <div
                  class="icon icon-shape bg-gradient-green text-white rounded-circle shadow"
                >
                  <i class="ni ni-money-coins"></i>
                </div>
              </div>
            </div>
            <p class="mt-3 mb-0 text-sm">
              <span class="text-success mr-2"
                ><i class="fa fa-arrow-up"></i
              ></span>
              <span class="text-nowrap">Incoming Schedule</span>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-md-6">
        <div class="card card-stats">
          <!-- Card body -->
          <div class="card-body">
            <div class="row">
              <div class="col">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  Review
                </h5>
                <span class="h2 font-weight-bold mb-0"><%=totalReview%></span>
              </div>
              <div class="col-auto">
                <div
                  class="icon icon-shape bg-gradient-info text-white rounded-circle shadow"
                >
                  <i class="ni ni-chart-bar-32"></i>
                </div>
              </div>
            </div>
            <p class="mt-3 mb-0 text-sm">
              <span class="text-success mr-2"
                ><i class="fa fa-arrow-up"></i> 0%</span
              >
              <span class="text-nowrap">Since now</span>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="card-deck flex-column flex-xl-row">
      <!-- Progress track -->
      <div class="card">
        <!-- Card header -->
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col-8">
              <!-- Surtitle -->
              <h6 class="surtitle">0/9 Mentor</h6>
              <!-- Title -->
              <h5 class="h3 mb-0">Mentor Track</h5>
            </div>
            <div class="col-4 text-right">
              <a href="#!" class="btn btn-sm btn-neutral">Action</a>
            </div>
          </div>
        </div>
        <!-- Card body -->
        <div class="card-body">
          <!-- List group -->
          <div class="text-center mx-auto justify-content-center text-center">
            <img
              class="img-fluid mr-4"
              alt="Responsive image"
              src="../../back/assets/img/custom/dashboard.svg"
              alt=""
              style="width: 45%;"
            />
          </div>
          <div class="mx-auto justify-content-center text-center mt-3">
            <a href="/mlist" class="btn btn-sm btn-primary mt-2">
              Explore Mentor
            </a>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col-8">
              <!-- Surtitle -->
              <h6 class="surtitle">Stats Panel</h6>
              <!-- Title -->
              <h5 class="h3 mb-0">User Summary</h5>
            </div>
          </div>
        </div>
        <div class="card-body mt-2">
          <ul class="list-group list-group-flush list my--3">
            <li
              class="px-0 list-group-item d-flex justify-content-between align-items-center"
            >
              Waiting Schedule
              <span class="badge badge-primary badge-pill"
                ><%=waitingSchedule%></span
              >
            </li>
            <li
              class="px-0 list-group-item d-flex justify-content-between align-items-center"
            >
              Rejected Schedule
              <span class="badge badge-primary badge-pill"
                ><%=rejectedSchedule%></span
              >
            </li>

            <li
              class="px-0 list-group-item d-flex justify-content-between align-items-center"
            >
              Next Mentoring
              <span class="badge badge-primary badge-pill"
                ><%= !nextMentoring ? "No Schedule" :
                moment(nextMentoring.datetime).format("LLLL") %>
              </span>
            </li>
            <li
              class="px-0 list-group-item d-flex justify-content-between align-items-center"
            >
              Finished Mentoring
              <span class="badge badge-primary badge-pill"
                ><%=finishedMentoring%></span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>

