<%-include('../../layouts/back/admin/header.ejs')%>
<!-- Sidenav -->
<%-include('../../layouts/back/admin/sideNav.ejs')%>
<!-- Main content -->
<div class="main-content" id="panel">
  <!-- Topnav -->
  <%-include('../../layouts/back/admin/topNav.ejs')%>
  <!-- Header -->
  <!-- Header -->
  <div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Tables</h6>
            <nav
              aria-label="breadcrumb"
              class="d-none d-md-inline-block ml-md-4"
            >
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item">
                  <a href="#"><i class="fas fa-home"></i></a>
                </li>
                <li class="breadcrumb-item"><a href="#">Blog</a></li>
              </ol>
            </nav>
          </div>
          <div class="col-lg-6 col-5 text-right">
            <a href="/admin/blog" class="btn btn-sm btn-neutral">New</a>
            <a href="#" class="btn btn-sm btn-neutral">Filters</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="card">
      <!-- Card header -->
      <div class="card-header border-0">
        <div class="row">
          <div class="col-6">
            <h3 class="mb-0">Blog Table</h3>
          </div>
          <div class="col-6 text-right">
            <a
              href="#"
              class="btn btn-sm btn-neutral btn-round btn-icon"
              data-toggle="tooltip"
              data-original-title="Edit product"
            >
              <span class="btn-inner--icon"
                ><i class="fas fa-user-edit"></i
              ></span>
              <span class="btn-inner--text">Export</span>
            </a>
          </div>
        </div>
      </div>
      <!-- Light table -->
      <div class="table-responsive">
        <table class="table align-items-center table-flush">
          <thead class="thead-light">
            <tr>
              <th>Title</th>
              <th>Created at</th>
              <th>Desc</th>
              <th>Status</th>
              <th>Action</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% for (var i=0;i<blog.length;i++) { %>
           <% var blogdata = blog[i]; %>
            <tr>
              <td class="table-user">
                <b><%=blogdata.title%></b>
              </td>
              <td>
                <span class="text-muted"><%=blogdata.date%></span>
              </td>
              <td>
                <b><%=blogdata.desc%></b>
              </td>
              <td>
                <%if (blogdata.status === true) {%>
                <b class="font-weight-bold text-blue">Published</b>
                <% } else { %>
                <b class="font-weight-bold text-danger">Postpone</b>
                <% } %> 
              </td>
              <td class="table-actions" >
              <form method="POST" action="/admin/blog/delete" >
               <a
                  href="/admin/blog/<%=blogdata._id%>"  
                  class="table-action table-action-edit"
                  data-toggle="tooltip"
                  data-original-title="edit blog"
                >
                <i class="fas fa-user-edit"></i>
                </a>
                <input type="hidden" value="<%= blogdata._id %>" name="id"/>
                <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');" class="table-action btn btn-sm"  data-toggle="tooltip" data-original-title="Delete blog"><i class="fas fa-trash"></i></button>    
              </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>


    <!-- Footer -->
    <%-include('../../layouts/back/admin/footer.ejs')%>
