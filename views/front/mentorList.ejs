                <div class="card-header" id="headingOne">
                  <h6 class="mb-0 text-dark">Last Activity</h6>
                </div>
              </a>
              <div
                id="collapseOne"
                class="collapse show"
                aria-labelledby="headingOne"
              >
                <div class="card-body p-0">
                  <div class="custom-control custom-radio">
                    <input
                      type="radio"
                      id="customRadio1"
                      name="customRadio"
                      class="custom-control-input"
                    />
                    <label
                      class="custom-control-label ml-1 text-muted"
                      for="customRadio1"
                      >Last Hour</label
                    >
                  </div>

                  <div class="custom-control custom-radio">
                    <input
                      type="radio"
                      id="customRadio2"
                      name="customRadio"
                      class="custom-control-input"
                    />
                    <label
                      class="custom-control-label ml-1 text-muted"
                      for="customRadio2"
                      >Last 24 hours</label
                    >
                  </div>

                  <div class="custom-control custom-radio">
                    <input
                      type="radio"
                      id="customRadio3"
                      name="customRadio"
                      class="custom-control-input"
                    />
