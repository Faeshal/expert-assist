            <a href="#" class="btn btn-sm btn-neutral">Filters</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6  justify-content-center mx-auto">
    <div class="row justify-content-center mx-auto mb-6">
      <div class="col-lg-8 text-center">
        <!-- Pricing card -->
        <div class="card">
          <!-- Card image -->
          <img
            class="card-img-top"
            src="https://images.pexels.com/photos/1672813/pexels-photo-1672813.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
            alt="Image placeholder"
            style=" height: 200px"
          />
          <!-- List group -->
          <ul class="list-group list-group-flush">
            <li class="list-group-item h3">Selamat Mengerjakan</li>
            <li class="list-group-item">
              <p class="font-weight-bold text-danger d-inline-block">Timer :</p>
              <span
                class="badge badge-warning badge-lg display-2 font-weight-bold"
                id="demo"
              >
              </span>
            </li>
          </ul>
          <!-- Card body -->
          <div class="card-body">
            <!-- <h3 class="card-title mb-3">Card title</h3> -->
            <div class="card-text mb-4 text-left">
              <div class="container" id="ff-compose"></div>
              <script async defer src="<%=testlink%>"></script>
            </div>
          </div>
        </div>
      </div>
    </div>

