<!-- Payment Modals -->
<div
  class="modal fade"
  id="paymentModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="paymentModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header mx-auto">
        <h5 class="modal-title" id="paymentModalLabel">
          PAYMENT BOX
        </h5>
        <hr />
      </div>
      <div class="modal-body">
        <div class="mx-auto justify-content-center text-center">
          <img
            class="img-fluid mt-1 mb-3"
            alt="Responsive image"
            src="../../front/images/paymentbox.svg"
            alt=""
            style="width: 75%;"
          />
        </div>
        <div
          class="alert alert-danger"
          role="alert"
          id="error-group"
          style="display: none;"
        >
          <ul id="errors"></ul>
        </div>
        <form method="POST" action="/pay">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Mentor</label>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input type="hidden" name="mentor" value="<%=mentor._id%>" />
              <input type="hidden" name="user" value="<%=userId%>" />
              <input
                type="text"
                class="form-control font-weight-bold"
                value="<%=mentor.username%>"
                readonly
              />
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Price/hour</label>
              <input
                type="text"
                name="total"
                class="form-control font-weight-bold"
                value="<%=mentor.price%>"
                readonly
              />
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1"
              >Input Mentoring Duration in hours</label
            >
            <input
              type="number"
              class="form-control"
              name="duration"
              min="1"
              max="10"
              required
            />
          </div>
          <div class="text-center justify-content-center">
            <button
              id="order-btn"
              type="submit"
              class="btn btn-primary mt-2 mx-auto"
            >
              CHECKOUT
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

