<%-include('../../layouts/back/mentor/header.ejs')%>
<!-- Sidenav -->
<%-include('../../layouts/back/mentor/sideNav.ejs')%>
<!-- Main content -->
<div class="main-content" id="panel">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script>
    $(document).ready(function() {
      $("#createbutton").click(function(e) {
        e.preventDefault();
        var data = $("input[name=examstatus]").val();
        $.ajax({
          type: "post",
          url: "/mentor/exam/begin?_csrf=<%=csrfToken%>",
          data: {
            examstatus: data
          },
          success: function(data) {
            //show content
            console.log(data);
          }
        });
      });
    });
  </script>
  <!-- Topnav -->
  <%-include('../../layouts/back/mentor/topNav.ejs')%>
  <!-- Header -->
  <!-- Header -->
  <style>
    .myIframe {
      position: relative;
      padding-bottom: 65.25%;
      padding-top: 30px;
      height: 0;
      overflow: auto;
      -webkit-overflow-scrolling: touch;
    }
    .myIframe iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  </style>
  <div class="header pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 d-inline-block mb-0">Exam</h6>
          </div>
          <div class="col-lg-6 col-5 text-right">
            <a href="#" class="btn btn-sm btn-neutral">New</a>
            <a href="#" class="btn btn-sm btn-neutral">Filters</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6  justify-content-center mx-auto">
    <div class="row justify-content-center mx-auto mb-6">
      <div class="col-lg-11 text-center">
        <!-- Pricing card -->
        <div class="card">
          <!-- Card image -->
          <img
            class="card-img-top"
            src="https://images.pexels.com/photos/1672813/pexels-photo-1672813.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
            alt="Image placeholder"
            style=" height: 200px"
          />
          <!-- List group -->
          <ul class="list-group list-group-flush">
            <li class="list-group-item h3">Selamat Mengerjakan</li>
            <li class="list-group-item">
              <h2 class="text-danger font-weight-bold" >Timer: </h2><h2 class="text-danger font-weight-bold" id="time"></h2>
            </li>
          </ul>
          <!-- Card body -->
          <div class="card-body">
            <!-- <h3 class="card-title mb-3">Card title</h3> -->
            <div class="card-text mb-4 text-left">
              <div class="myIframe">
                <iframe
                  id="gform"
                  src="<%= testlink %> "
                  frameborder="0"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- modals -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      data-keyboard="false"
      data-backdrop="static"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Exam Rules</h5>
          </div>
          <form method="POST" id="eventForm">
            <div class="modal-body">
              Exam Status : True
            </div>
            <div class="modal-footer mx-auto text-center">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input type="hidden" name="examstatus" value="true" />
              <button
                type="button"
                class="btn btn-primary"
                id="createbutton"
                data-dismiss="modal"
                onclick="timer()"
              >
                Save changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function() {
        $("#exampleModal").modal("show");
      });
    </script>

    <script type="text/javascript">
      var load = 0;

      document.getElementById("gform").onload = function() {
        /*Execute on every reload on iFrame*/
        load++;
        if (load > 1) {
          /*Second reload is a submit*/
          document.location = "http://localhost:3000/mentor/exam";
        }
      };
    </script>
    <!-- Footer -->
    <%-include('../../layouts/back/mentor/footer.ejs')%>
  </div>
</div>
