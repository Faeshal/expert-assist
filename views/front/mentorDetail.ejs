<script>
  function sweet() {
    Swal.fire("Alert!", "You Must Login as User", "info");
  }
</script>
<script>
  $(document).ready(() => {
    let option = {
      max_value: 10,
      readonly: true,
    };
    $(".rate").rate(option);
    $(".review").rate(option);
  });
</script>
