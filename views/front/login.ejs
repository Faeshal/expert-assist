<%-include('../layouts/authentication/header.ejs')%>

<!-- Hero Start -->
<section
  class="vh-100"
  style="background: url('https://images.pexels.com/photos/2132891/pexels-photo-2132891.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940') center center;"
>
  <div class="home-center">
    <div class="home-desc-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-4 col-md-6">
            <div class="login-page bg-white shadow rounded p-4">
              <div class="text-center">
                <h4 class="mb-4">LOGIN</h4>
              </div>
              <% if (errorMessage) { %>
              <div class="alert alert-danger text-center  mb-3" role="alert">
                <%=errorMessage%>
              </div>
              <% } %>
             <form class="login-form" action="/login?_csrf=<%=csrfToken%>" method="POST" novalidate>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group position-relative">
                      <label
                        >Email <span class="text-danger">*</span></label
                      >
                      <input
                        type="email"
                        name="email"
                        value="<%=oldInput.email%>"
                        class="<%= validationErrors.find(e => e.param === "email") ? "form-control border border-danger" : "form-control" %>" 
                      />
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group position-relative">
                      <label>Password <span class="text-danger">*</span></label>
                      <input
                        type="password"
                        name="password"
                   
                        value="<%=oldInput.password%>"
                        class="<%= validationErrors.find(e => e.param === "password") ? "form-control border border-danger" : "form-control" %>" 
                      />
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <label>Role<span class="text-danger">*</span></label>
                      <select class="<%= validationErrors.find(e => e.param === "level") ? "custom-select border border-danger" : "custom-select" %>" name="level" required>
                        <option value="" selected>Select One</option>
                        <option value="user">User</option>
                        <option value="mentor">Mentor</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <p class="float-right forgot-pass">
                      <a href="/reset" class="text-dark font-weight-bold"
                        >Forgot password ?</a
                      >
                    </p>
                  </div>
                  <div class="col-lg-12 mb-0">
                    <button class="btn btn-primary w-100" type="submit">
                      Sign in
                    </button>
                  </div>
                  <div class="col-12 text-center">
                    <p class="mb-0 mt-3">
                      <small class="text-dark mr-2"
                        >Don't have an account ?</small
                      >
                      <a href="/register" class="text-dark font-weight-bold"
                        >Register</a
                      >
                    </p>
                  </div>
                </div>
              </form>
            </div>
            <!---->
          </div>
          <!--end col-->
        </div>
        <!--end row-->
      </div>
      <!--end container-->
    </div>
  </div>
</section>
<!--end section-->
<!-- Hero End -->

<%-include('../layouts/authentication/footer.ejs')%>
