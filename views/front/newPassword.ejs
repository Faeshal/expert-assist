<%-include('../layouts/authentication/header.ejs')%>

<!-- Hero Start -->
<section
  class="vh-100"
  style="background: url('https://images.pexels.com/photos/1659432/pexels-photo-1659432.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940') center center;"
>
  <div class="home-center">
    <div class="home-desc-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-4 col-md-6">
            <div class="login_page bg-white shadow rounded p-4">
              <div class="text-center">
                <h4 class="mb-4">Set New Password</h4>
              </div>
              <% if (errorMessage) { %>
              <div class="alert alert-danger text-center mb-3" role="alert">
                <%=errorMessage%>
              </div>
              <% } %>
              <form class="login-form" action="/newpassword" method="POST">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group position-relative">
                      <label
                        >New Password <span class="text-danger">*</span></label
                      >
                      <input
                        type="password"
                        class="form-control"
                        placeholder="Enter Your New Password"
                        name="password"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <input
                      type="hidden"
                      name="_csrf"
                      value="<%= csrfToken %>"
                    />
                    <input
                      type="hidden"
                      name="userId"
                      value="<%= userId %>"
                    />
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                    <button type="submit" class="btn btn-primary w-100">
                      Set Password
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!--end col-->
        </div>
        <!--end row-->
      </div>
      <!--end container-->
    </div>
  </div>
</section>
<!--end section-->
<!-- Hero End -->

<%-include('../layouts/authentication/footer.ejs')%>
