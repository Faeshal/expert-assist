                <div class="card-body p-0">
                  <div class="custom-control custom-radio">
                    <input
                      type="radio"
                      id="customRadio7"
                      name="customRadio1"
                      class="custom-control-input"
                    />
                    <label
                      class="custom-control-label ml-1 text-muted"
                      for="customRadio7"
                      >Web Designer</label
                    >
                  </div>

                  <div class="custom-control custom-radio">
                    <input
                      type="radio"
                      id="customRadio12"
                      name="customRadio1"
                      class="custom-control-input"
                    />
                    <label
                      class="custom-control-label ml-1 text-muted"
                      for="customRadio12"
