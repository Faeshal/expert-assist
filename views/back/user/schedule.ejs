<%-include('../../layouts/back/user/header.ejs')%>
<!-- Sidenav -->
<%-include('../../layouts/back/user/sideNav.ejs')%>
<!-- Main content -->
<div class="main-content" id="panel">
  <!-- Topnav -->
  <%-include('../../layouts/back/user/topNav.ejs')%>
  <!-- Header -->
  <!-- Header -->
  <div class="header bg-secondary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-primary d-inline-block mb-0">Book The Mentor</h6>
            <nav
              aria-label="breadcrumb"
              class="d-none d-md-inline-block ml-md-4"
            >
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item">
                  <a href="#"><i class="fas fa-home"></i></a>
                </li>
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
              </ol>
            </nav>
          </div>
          <div class="col-lg-6 col-5 text-right">
            <a
              href="javascript:void(0);"
              class="btn btn-sm btn-neutral tombolTambahData"
              data-toggle="modal"
              data-target="#modal-form"
              >New</a
            >
            <a href="#" class="btn btn-sm btn-neutral">Filters</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col-lg-6">
        <div class="card-wrapper">
          <!-- Input groups -->
          <div class="card">
            <!-- Card header -->
            <div class="card-header">
              <h3 class="mb-0">Input groups</h3>
            </div>
            <!-- Card body -->
            <div class="card-body">
              <form action="/user/schedule" method="POST">
                <!-- Input groups with icon -->
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="input-group input-group-merge">
                        <div class="input-group-prepend">
                          <span class="input-group-text"
                            ><i class="fas fa-envelope"></i
                          ></span>
                        </div>
                        <input
                          type="hidden"
                          name="user"
                          value="<%=payment.user._id%>"
                        />
                        <input
                          type="hidden"
                          name="mentor"
                          value="<%=payment.mentor._id%>"
                        />
                        <input
                          class="pl-2 form-control"
                          placeholder="User"
                          type="text"
                          readonly="true"
                          value="<%=payment.mentor.username%>"
                        />
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="input-group input-group-merge">
                        <input
                          class=" pl-2 form-control"
                          type="datetime-local"
                          value="2020-10-23T10:30:00"
                          id="example-datetime-local-input"
                          name="datetime"
                        />
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Input groups with icon -->
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="input-group input-group-merge">
                        <div class="input-group-prepend">
                          <span class="input-group-text"
                            ><i class="fas fa-credit-card"></i
                          ></span>
                        </div>
                        <input
                          type="hidden"
                          name="_csrf"
                          value="<%= csrfToken %>"
                        />
                        <input
                          class="form-control"
                          placeholder="Note"
                          type="text"
                          name="note"
                        />
                        <div class="input-group-append">
                          <span class="input-group-text"></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12 text-center mx-auto">
                    <button type="submit" class="btn btn-sm btn-primary">
                      Book Mentor
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mx-auto">
        <div class="card-wrapper">
          <!-- CATEGORY TABLE -->
          <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
              <div class="row">
                <div class="col-6">
                  <h3 class="mb-0">Plan The Schedule</h3>
                </div>
                <div class="col-6 text-right">
                  <a
                    href="#"
                    class="btn btn-sm btn-neutral btn-round btn-icon"
                    data-toggle="tooltip"
                    data-original-title="Edit product"
                  >
                    <span class="btn-inner--icon"
                      ><i class="fas fa-user-edit"></i
                    ></span>
                    <span class="btn-inner--text">Export</span>
                  </a>
                </div>
              </div>
            </div>
            <!-- Light Table -->
            <div class="table-responsive">
              <table class="table align-items-center table-flush" id="mytable">
                <thead class="thead-light">
                  <tr>
                    <th>Mentor</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Approve</th>
                  </tr>
                </thead>
                <tbody>
                  <% schedule.forEach(scheduleData=>{ %>

                  <tr>
                    <td class="table-user">
                      <b><%= scheduleData.mentor.username %> </b>
                    </td>
                    <td>
                      <span class="text-muted"
                        ><%= moment(scheduleData.datetime).format("LL") %></span
                      >
                    </td>
                    <td>
                      <span class="text-muted"
                        ><%= moment(scheduleData.datetime).format("LT") %></span
                      >
                    </td>
                    <td class="table-actions">
                      <% if (scheduleData.approve == false) { %>
                      <span class="badge badge-pill badge-warning text-dark"
                        >Waiting</span
                      >
                      <% } else{ %>
                      <span class="badge badge-pill badge-success text-dark"
                        >Approve</span
                      >
                      <% } %>
                    </td>
                    <% }) %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%-include('../../layouts/back/user/footer.ejs')%>
  </div>
</div>
