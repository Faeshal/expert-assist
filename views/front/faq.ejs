<%-include('../layouts/home/header.ejs')%> <%-include('../layouts/navbar.ejs')%>

<!-- Start home -->
<section class="bg-half page-next-level">
  <div class="bg-overlay"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center text-white">
          <h4 class="text-uppercase title mb-4">F.A.Q</h4>
           <p class="leader">All Common Questions with the Answers</p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end home -->

<!-- FAQ START -->
<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="faq-content">
          <h4 class="text-dark">Pertanyaan Umum :</h4>

          <div class="faq-content mt-3">
            <div class="accordion" id="accordionExample2">
              <% admin[0].faq.forEach(faqData=>{ %> 
              <div class="card border rounded shadow mb-3">
                <a
                  data-toggle="collapse"
                  href="#<%-voca.slugify(faqData.question)%>"
                  class="faq collapsed position-relative"
                  aria-expanded="true"
                >
                  <div class="card-header bg-light p-3">
                    <h6 class="title mb-0 faq-question">
                      <%= faqData.question %>
                    </h6>
                  </div>
                </a>
                <div
                  id="<%-voca.slugify(faqData.question)%>"
                  class="collapse"
                  data-parent="#accordionExample2"
                >
                  <div class="card-body">
                    <p class="text-muted mb-0 faq-ans">
                      <%= faqData.answer %>
                    </p>
                  </div>
                </div>
              </div>
              <% }) %>
              <!-- collapse one end -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- FAQ END -->

<!-- footer start -->
<%-include('../layouts/home/footer.ejs')%>
