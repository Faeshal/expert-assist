<%-include('../layouts/blog/header.ejs')%> <%-include('../layouts/navbar.ejs')%>

<!-- Start home -->
<section class="bg-half page-next-level">
  <div class="bg-overlay"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center text-white">
          <h4 class="text-uppercase title mb-4">Blog Detail</h4>
          <ul class="page-next d-inline-block mb-0">
            <p class="leader">Daily Read about Tech & Career</p>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end home -->

<!-- BLOG LIST START -->
<section class="section">
  <div class="container">
    <div class="row">
      <div
        class="col-lg-4 col-md-6 col-12 order-2 order-md-1 mt-4 mt-sm-0 pt-2 pt-sm-0"
      >
        <div class="sidebar mt-sm-30 p-4 rounded shadow">
          <!-- SEARCH -->
          <div class="widget mb-4 pb-2">
            <div id="search2" class="widget-search mb-0">
              <form
                role="search"
                method="get"
                id="searchform"
                class="searchform"
              >
                <div>
                  <input
                    type="text"
                    class="border rounded"
                    name="s"
                    id="s"
                    placeholder="Search Keywords..."
                  />
                  <input type="submit" id="searchsubmit" value="Search" />
                </div>
              </form>
            </div>
          </div>
          <!-- SEARCH -->

          <!-- RECENT POST -->
          <div class="widget mb-4 pb-2">
            <h4 class="widget-title">Recent Post</h4>
            <div class="mt-4">
              <% allBlog.forEach(blog=>{ %>
              <div class="clearfix post-recent mb-3">
                <div class="post-recent-thumb float-left">
                  <a href="jvascript:void(0)">
                    <img
                      alt="img"
                      src="<%= blog.image %>"
                      class="img-fluid rounded"
                  /></a>
                </div>
                <div class="post-recent-content float-left">
                  <a href="jvascript:void(0)"><%= blog.title %> </a
                  ><span class="text-muted mt-2"
                    ><%= moment(blog.date).format("LL") %></span
                  >
                </div>
              </div>
              <% }) %>
            </div>
          </div>
          <!-- RECENT POST -->

          <!-- TAG CLOUDS -->
          <div class="widget mb-4 pb-2">
            <h4 class="widget-title">Tags Cloud</h4>
            <div class="tagcloud mt-4">
              <a href="jvascript:void(0)" class="rounded">Software</a>
              <a href="jvascript:void(0)" class="rounded">Development</a>
              <a href="jvascript:void(0)" class="rounded">IT</a>
              <a href="jvascript:void(0)" class="rounded">Developer</a>
              <a href="jvascript:void(0)" class="rounded">Career</a>
              <a href="jvascript:void(0)" class="rounded">Programming</a>
            </div>
          </div>
          <!-- TAG CLOUDS -->

          <!-- SOCIAL -->
          <div class="widget">
            <h4 class="widget-title">Follow us</h4>
            <ul class="list-unstyled social-icon mt-4 mb-0">
              <li class="list-inline-item">
                <a href="jvascript:void(0)" class="rounded"
                  ><i class="mdi mdi-facebook"></i
                ></a>
              </li>
              <li class="list-inline-item">
                <a href="jvascript:void(0)" class="rounded"
                  ><i class="mdi mdi-instagram"></i
                ></a>
              </li>
              <li class="list-inline-item">
                <a href="jvascript:void(0)" class="rounded"
                  ><i class="mdi mdi-twitter"></i
                ></a>
              </li>
            </ul>
          </div>
          <!-- SOCIAL -->
        </div>
      </div>
      <!--end col-->

      <div class="col-lg-8 col-md-6 col-12 order-1 order-md-2">
        <div class="shadow rounded p-4">
          <div class="blog-details-img">
            <img
              src="<%=blog.image%>"
              alt="Responsive image"
              class="img-fluid mx-auto rounded d-block"
            />
          </div>
          <div class="blog-details meta mt-3">
            <ul class="list-inline mb-1">
              <li class="list-inline-item mr-4">
                <p class="text-muted mb-0">
                  <i class="mdi mdi-calendar-range mr-1"></i
                  ><%=moment(blog.date).format("LLL")%>
                </p>
              </li>
            </ul>
          </div>

          <div class="blog-details-desc p-2">
            <h5 class="mb-3">
              <a href="#" class="text-dark"><%=blog.title%></a>
            </h5>

            <p class="text-muted mb-3 f-13"><%=blog.desc%></p>

            <p class="text-muted f-13"><%-blog.content%></p>
          </div>
        </div>

        <div class="rounded border mt-4 p-4">
          <h5 class="text-rk mb-2">
            <i class="mdi mdi-comment-multiple mr-2"></i>Comments
          </h5>
          <div id="hyvor-talk-view"></div>
          <script type="text/javascript">
            var HYVOR_TALK_WEBSITE = 271; // DO NOT CHANGE THIS
            var HYVOR_TALK_CONFIG = {
              url: false,
              id: false,
            };
          </script>
          <script
            async
            type="text/javascript"
            src="//talk.hyvor.com/web-api/embed"
          ></script>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- BLOG LIST END -->

<%-include('../layouts/blog/footer.ejs')%>
